{
  "root": true,
  "extends": ["eslint:recommended", "google", "plugin:prettier/recommended"],
  "plugins": ["prettier", "googleappsscript"],
  "env": {
    "googleappsscript/googleappsscript": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-var": "off",
    "valid-jsdoc": "off",
    "require-jsdoc": "off",
    "guard-for-in": "off",
    "comma-dangle": [
      "error",
      {
        "arrays": "off",
        "objects": "off",
        "imports": "never",
        "exports": "never",
        "functions": "off"
      }
    ]
  },
  "parserOptions": { "ecmaVersion": 6 }
}
